<form action="/auth/login" method="POST">
  <div class="form-group">
    <label for="auth-email">Email</label>
    <input id="auth-email" type="email" name="email" class="form-control" placeholder="Enter email">
  </div>

  <div class="form-group">
    <label for="auth-password">Password</label>
    <input id="auth-password" type="password" name="password" class="form-control" placeholder="Enter password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>